{
  "name": "bundle-size-diff",
  "version": "1.0.0",
  "description": "Github action for getting bundle size diffs for PR's",
  "workspaces": [
    "plugin"
  ],
  "main": "dist/index.js",
  "scripts": {
    "lint": "standard",
    "build": "esbuild index.ts --bundle --platform=node --target=node16  --outfile=dist/index.js",
    "lint:plugin": "npm run lint --workspace=plugin",
    "build:plugin": "npm run build --workspace=plugin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NejcZdovc/bundle-size-diff.git"
  },
  "keywords": [
    "vite",
    "github action",
    "actions",
    "diff"
  ],
  "author": "Nejc Zdovc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NejcZdovc/bundle-size-diff/issues"
  },
  "homepage": "https://github.com/NejcZdovc/bundle-size-diff#readme",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "esbuild": "^0.17.10",
    "filesize": "^6.1.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^16.14.0",
    "standard": "^16.0.3",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "standard": {
    "ignore": [
      "dist"
    ]
  }
}
